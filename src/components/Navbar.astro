---
const { pathname } = Astro.url;

const lists = [
  {
    name: "Home",
    path: "/",
  },
  {
    name: "Pokedex",
    path: "/pokedex",
  },
];

const activeLink = "hover:border-b-2 border-slate-600";
---

<nav class="bg-slate-200 container-fluid sticky top-0 z-50">
  <div class="max-w-7xl mx-auto p-4 sm:px-6 lg:px-8 h-16">
    <div class="flex justify-between">
      <h1 class="text-3xl font-bold">Pokemon Galery</h1>
      <div class="hidden sm:block sm:ml-6">
        <div class="flex space-x-4">
          {
            lists.map((list) => (
              <a
                href={list.path}
                class:list={[
                  activeLink,
                  { "border-b-2": list.path === pathname },
                ]}
              >
                {list.name}
              </a>
            ))
          }
        </div>
      </div>
    </div>
  </div>
</nav>
